<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
</head>
<body>
  <h1><%= data.jenis %> <%= data.materi %></h1>
  <p>Selamat datang di tutorial Node.js dan EJS!</p>
  <h1>Data from Database</h1>

  <table id="tableSoal" border="1">
    <thead>
      <tr>
        <th>NO</th>
        <th>Materi</th>
        <th>Pertanyaan</th>
        <th>Kesulitan</th>
      </tr>
    </thead>
    <tbody>
      <% let counter = 1; %>
      <% soal.forEach(item => { %>
        <tr>
          <td><%= counter++; %></td>
          <td><%= item.materi %></td>
          <td><%= item.pertanyaan %></td>
          <td><%= item.tingkat_kesulitan %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
