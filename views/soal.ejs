<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Ujian</title>
    <link rel="stylesheet" href="index.css">
</head>
<body>
    <div id="navbar">
        <div id="listMenu">
            <a href="/" id="menuUjian">Manajemen Ujian</a>
            <a href="/soal" id="menuSoal" class="active">Bank Soal</a>
        </div>
    </div>

    <div id="content">
        <h1 class="judul">Dashboard Bank Soal</h1>
        <div id="table-container">
            <table>
                <thead>
                    <tr>
                      <th>NO</th>
                      <th>Materi</th>
                      <th>Pertanyaan</th>
                      <th>Opsi Jawaban</th>
                      <th>Jawaban Benar</th>
                      <th>Kesulitan</th>
                      <th>BAB</th>
                    </tr>
                </thead>
                <tbody>
                    <% let counter = 1; %>
                    <% data.forEach(item => { %>
                      <tr>
                        <td><%= counter++; %></td>
                        <td><%= item.materi %></td>
                        <td><%= item.pertanyaan %></td>
                        <td><%= item.opsi_jawaban %></td>
                        <td><%= item.jawaban_benar %></td>
                        <td><%= item.tingkat_kesulitan %></td>
                        <td><%= item.bab %></td>
                      </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <div id="create-exam-btn">
        <a href="/bankSoal" type="button">Tambah Soal Baru</a>
    </div>
    <!-- <button id="create-exam-btn">Buat Ujian Baru</button> -->

</body>
</html>
